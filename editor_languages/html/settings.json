{
  "id": "html",
  "title": "HTML",
  "description": "Create websites with HTML.",
  "editorRootAST": ["#?single", "#?double"],
  "wordTypes": {
    "none": { "id": "none", "color": "black" },
    "keyword": { "id": "keyword", "color": "blue" },
    "attribute": { "id": "attribute", "color": "lightblue" },
    "operator": { "id": "operator", "color": "black" },
    "string": { "id": "string", "color": "orange" }
  },
  "astToBlock": {
    "#?single": {
      "grammar": [
        {
          "type": "fixed",
          "data": { "word": "<", "wordType": "operator" }
        },
        {
          "type": "varString",
          "data": { "var": "tagName", "wordType": "keyword" }
        },
        {
          "type": "fixed",
          "data": { "word": " ", "wordType": "operator" }
        },
        { "type": "varAst", "data": { "var": "attr", "type": "stringRecord" } },
        { "type": "fixed", "data": { "word": ">", "wordType": "operator" } }
      ]
    },
    "#?double": {
      "grammar": [
        {
          "type": "fixed",
          "data": { "word": "<", "wordType": "operator" }
        },
        {
          "type": "varString",
          "data": { "var": "tagName", "wordType": "keyword" }
        },
        {
          "type": "fixed",
          "data": { "word": " ", "wordType": "operator" }
        },
        {
          "type": "varAst",
          "data": { "var": "attr", "type": "stringRecord" }
        },
        { "type": "fixed", "data": { "word": ">", "wordType": "operator" } },
        { "type": "newline" },
        { "type": "varAst", "data": { "var": "children" } },
        { "type": "newline" },
        {
          "type": "fixed",
          "data": { "word": "</", "wordType": "operator" }
        },
        {
          "type": "varString",
          "data": { "var": "tagName", "wordType": "keyword" }
        },
        { "type": "fixed", "data": { "word": ">", "wordType": "operator" } }
      ]
    },
    "#/attr": {
      "grammar": [
        {
          "type": "varString",
          "data": { "var": "$key", "wordType": "attribute" }
        },
        {
          "type": "fixed",
          "data": { "word": "=", "wordType": "operator" }
        },
        { "type": "fixed", "data": { "word": "\"", "wordType": "string" } },
        {
          "type": "input",
          "data": { "inputType": "string", "var": "$value" }
        },
        { "type": "fixed", "data": { "word": "\"", "wordType": "string" } }
      ],
      "settings": {
        "separator": [
          {
            "type": "fixed",
            "data": { "word": " ", "wordType": "operator" }
          }
        ]
      }
    }
  },
  "blocks": {
    "div": {
      "id": "img",
      "title": "imgタグ",
      "description": "画像です。",
      "ast": {
        "$astId": "#?single",
        "attr": {
          "$astId": "#/attr",
          "src": ""
        },
        "tagName": "img",
        "text": "",
        "children": []
      }
    }
  },
  "categories": [
    {
      "id": "basics",
      "title": "基本",
      "descriptiveTitle": "基本的な要素",
      "icon": "box-multiple.svg",
      "blocks": ["img", "div"]
    },
    {
      "id": "list",
      "title": "リスト",
      "descriptiveTitle": "リスト要素",
      "icon": "list.svg",
      "blocks": ["list"]
    }
  ]
}
